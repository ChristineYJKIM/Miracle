<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/signupActivity_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="550dp"
        android:layout_marginRight="100dp"
        android:text="스스로의 기적이\n될 준비가 되셨나요?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/signupActivity_textview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:text="이메일"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/signupActivity_edittext_id"
        android:hint="e-mail"
        android:layout_alignStart="@+id/signupActivity_textview_id"
        android:layout_alignTop="@+id/signupActivity_textview_id"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/signupActivity_textview_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:text="비밀번호"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/signupActivity_edittext_password"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_alignStart="@+id/signupActivity_textview_password"
        android:layout_alignTop="@+id/signupActivity_textview_password"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/signupActivity_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        android:text="이름"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/signupActivity_edittext_name"
        android:hint="name"
        android:layout_alignStart="@+id/signupActivity_textview_name"
        android:layout_alignTop="@+id/signupActivity_textview_name"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/signupActivity_button_signup"
        android:src="@drawable/signup_next_button"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>