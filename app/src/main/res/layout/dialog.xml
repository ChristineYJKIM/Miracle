<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="커뮤니티 이름"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:textSize="22sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/dialog_edittext_title"
        android:hint="Community Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/gmarketsans_light"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:text="커뮤니티 설명"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:textSize="22sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/dialog_edittext_explain"
        android:hint="Please explain your community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/gmarketsans_light"
        android:textSize="20sp"
        android:textColor="@color/black"/>

</LinearLayout>