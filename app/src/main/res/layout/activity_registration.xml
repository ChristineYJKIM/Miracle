<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/intro_2"
    tools:context="com.example.community2.RegistrationActivity">

    <Toolbar
        android:id="@+id/RegisterToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/register_nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/mainblue"
        android:contentDescription="go_to_habitPage"
        android:src="@drawable/ic_stat_name"
        app:tint="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="스스로의 기적이\n될 준비가 되셨나요?"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/RegisterEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:hint="이메일을 입력해주세요"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#979797"
        android:fontFamily="@font/gmarketsans_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/RegisterPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#979797"
        android:fontFamily="@font/gmarketsans_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="비밀번호 확인"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/RegisterPassword2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:hint="비밀번호를 다시 입력해주세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#979797"
        android:fontFamily="@font/gmarketsans_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/User_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:hint="이름 입력"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#979797"
        android:fontFamily="@font/gmarketsans_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="전화번호"
        android:textColor="@color/black"
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/phone_number"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:hint="전화번호 입력"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#979797"
        android:fontFamily="@font/gmarketsans_medium"/>

</LinearLayout>