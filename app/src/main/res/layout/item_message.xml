<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/messageItem_linearLayout_main"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:id="@+id/messageItem_linearLayout_destination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/messageItem_textview_name"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsans_medium"
            android:textColor="@color/black"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/messageItem_textView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/kopub_medium"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/messageItem_imageview"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/messageItem_textview_readCounter_left"
                android:text="1"
                android:textColor="@color/mainblue"
                android:textSize="15dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <TextView
                android:text="2011.11.11 11:11"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/messageItem_textview_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/gmarketsans_medium"/>

            <TextView
                android:id="@+id/messageItem_textview_readCounter_right"
                android:text="1"
                android:textColor="@color/mainblue"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>